  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.18.0",
    "nats": "^2.16.0",
    "redis": "^4.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^0.34.0"
