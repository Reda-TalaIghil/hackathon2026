{
  "name": "@flowback/backend",
  "version": "0.1.0",
  "description": "Event-driven backend services and agents",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/services/ingest.ts",
    "dev:ingest": "tsx watch src/services/ingest.ts",
    "dev:api": "tsx watch src/services/api.ts",
    "start": "node dist/services/ingest.js",
    "agent:signal": "tsx watch src/agents/signal-agent.ts",
    "agent:feedback": "tsx watch src/agents/feedback-agent.ts",
    "agent:context": "tsx watch src/agents/context-agent.ts",
    "agent:ethics": "tsx watch src/agents/ethics-agent.ts",
    "agent:correlator": "tsx watch src/agents/correlator-agent.ts",
    "agent:storage": "tsx watch src/agents/storage-agent.ts",
    "agent:api": "tsx watch src/services/api.ts",
    "build": "tsc",
    "test": "vitest"
